<!-- NIVEL 2 -->
<!-- a. Informar del estado de un día especificado con <ESPECIFICA DIA> -->
<category>
    <pattern>LIBRE HOY ^</pattern>
    <template>
        <think>
            <set var="completeDay">
                <srai> DATE </srai>
            </set>
            <set var="remainder">
                <srai> REMAIN <get var="completeDay"/></srai>
            </set>
            <set var="day">
                <srai> TOP <get var="completeDay"/></srai>
            </set>

            <set var="month">
                <srai> TOP <get var="remainder"/></srai>
            </set>
        </think>
            <srai>LIBRE <get var="day"/> de <get var="month"/> del 21</srai>
    </template>
</category>

